<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<!-- Bootstrap CSS can be included directly if you haven't done so in your Webpack Encore -->
			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
		{% endblock %}
	</head>
	<body>
		<div class="container-fluid">
			<div class="row flex-nowrap">
				<div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0" style="background-color: #abb8c3">
					<div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
						<a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-decoration-none" style="color: #dd3333">
							<b>
								<span class="fs-5 d-none d-sm-inline">ANT<i>labs</i>
								</span>
							</b>
						</a>
						<ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start w-100" id="menu">
							<li class="nav-item w-100">
								<a href="{{ path('app_home') }}" class="nav-link align-middle px-2 {% if app.request.get('_route') == 'app_home' %}active{% endif %}">
									<i class="bi bi-house"></i>
									<span class="ms-1 d-none d-sm-inline">Home</span>
								</a>
							</li>
							<li class="nav-item w-100">
								<a href="{{ path('app_product_new') }}" class="nav-link px-2 align-middle {% if app.request.get('_route') == 'app_product_new' %}active{% endif %}">
									<i class="bi bi-plus-square"></i>
									<span class="ms-1 d-none d-sm-inline">Add New Product</span>
								</a>
							</li>
							<li class="nav-item w-100">
								<a href="{{ path('app_product_index') }}" class="nav-link px-2 align-middle {% if app.request.get('_route') == 'app_product_index' %}active{% endif %}">
									<i class="bi bi-table"></i>
									<span class="ms-1 d-none d-sm-inline">View Products</span>
								</a>
							</li>
						</ul>
					</div>
				</div>

				{# Main Content #}
				<div
					class="col py-3">
					{# Flash messages #}
					{% for label, messages in app.flashes %}
						{% for message in messages %}
							<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
								{{ message }}
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
						{% endfor %}
					{% endfor %}

					{% block body %}{% endblock %}
				</div>
			</div>
		</div>

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			<!-- Optionally include Bootstrap JS if you're using Bootstrap components that require JavaScript -->
			<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
		{% endblock %}
	</body>
</html>
