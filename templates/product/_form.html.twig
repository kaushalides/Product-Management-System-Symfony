{# templates/product/_form.html.twig #}
{{ form_start(form) }}

{% for field in form %}
	{% if field.vars.name != '_token' %}
		<div class="mb-3">
			{{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(field, {
                'attr': {
                    'class': 'form-control' ~ (field.vars.errors|length > 0 ? ' is-invalid' : ''),
                    'placeholder': field.vars.label|lower|capitalize
                }
            }) }}

			{% if field.vars.errors|length > 0 %}
				<div class="invalid-feedback">
					{{ field.vars.errors|join(', ') }}
				</div>
			{% endif %}

			{% if field.vars.help is defined and field.vars.help is not empty %}
				<small class="form-text text-muted">{{ field.vars.help }}</small>
			{% endif %}
		</div>
	{% endif %}
{% endfor %}

<div class="mb-3">
	<button type="submit" class="btn btn-primary" style="background-color: #dd3333; border-color: #dd3333;">
		{{ button_label|default('Save') }}
	</button>
	<a href="{{ path('app_product_index') }}" class="btn btn-secondary">Cancel</a>
</div>

{{ form_end(form) }}
